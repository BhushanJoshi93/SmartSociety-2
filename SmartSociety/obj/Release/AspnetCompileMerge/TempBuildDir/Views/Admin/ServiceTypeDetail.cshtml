
@{
    ViewBag.Title = "ServiceTypeDetail";
    Layout = "~/Views/AdminLayout.cshtml";
    SmartSociety.Models.ServiceType stu = (SmartSociety.Models.ServiceType)ViewBag.ServiceTypeUpdate;
}

<div class="col-md-6 col-sm-6 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Service Type Details</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <br>
            <form id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="" action="/Admin/ServiceTypeDetail" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="WingName">
                        Name <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="text" id="Name" name="STName" value="@stu.STName" required="required" class="form-control col-md-7 col-xs-12" data-parsley-id="9549"><ul class="parsley-errors-list" id="parsley-id-9549"></ul>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="MaxUnit">
                        Choose Photo <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @if (stu.ServiceTypeID > 0)
                        {
                            <img src="@stu.PhotoPath" style="max-height:200px; max-width:200px; border: solid 3px #888888;" />
                                    <br />
                        }
                        <input class="input-xlarge focused" id="Photo" type="file" name="Photo">
                    </div>
                </div>
                <input type="hidden" name="ServiceTypeID" value="@stu.ServiceTypeID" />
                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <button type="button" onclick="location.href='/Admin/ServiceTypeDetail/0'" class="btn btn-primary">Cancel</button>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

<div class="col-md-6 col-sm-6 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>ServiceType List</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Rows.Count > 0)
                    {
                        for (int i = 0; i < Model.Rows.Count; i++)
                        {
                            <tr>
                                <td>@Model.Rows[i]["ServiceTypeID"]</td>
                                <td>@Model.Rows[i]["STName"]</td>
                                <td><a href="~/Admin/ServiceTypeDetail/@Model.Rows[i]["ServiceTypeID"]">Edit</a>/<a href="~/Admin/ServiceTypeDelete/@Model.Rows[i]["ServiceTypeID"]">Delete</a></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>NO DATA</td>
                            <td>NO DATA</td>
                            <td>NO DATA</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>


